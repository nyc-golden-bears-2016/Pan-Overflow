<!-- [user ability][fourm]cast up\downvote -->
<div class="votebox">
<table>
    <tr>
      <th>
        <form class="upvote_form" action="/votes" method="POST">
          <% if logged_in? %>
        <form action="/votes" method="POST">
          <input type="hidden" name="votes[value]" value="1">
          <input type="hidden" name="votes[voteable_id]" value="<%= model.id %>">
          <input type="hidden" name="votes[voteable_type]" value="<%= model.class %>">
          <input type="hidden" name="votes[user_id]" value="<%= current_user.id %>">
          <input type="hidden" name="question_id" value="<%= question_id %>">
          <input type="image" name="submit" src="/uparrow.png">
        </form>
          <% else %>
          <img src="/uparrow.png">
          <% end %>
      </th>
    </tr>
    <tr>
      <th id="vote-count"><%= model.points %></th>
    </tr>
    <tr>
      <th>
        <form class="downvote_form" action="/votes" method="POST">
          <% if logged_in? %>
        <form action="/votes" method="POST">
          <input type="hidden" name="votes[value]" value="-1">
          <input type="hidden" name="votes[voteable_id]" value="<%= model.id %>">
          <input type="hidden" name="votes[voteable_type]" value="<%= model.class %>">
          <input type="hidden" name="votes[user_id]" value="<%= current_user.id %>">
          <input type="hidden" name="question_id" value="<%= question_id %>">
          <input type="image" name="submit" src="/downarrow.png">
        </form>
          <% else %>
          <img src="/downarrow.png">
          <% end %>
      </th>
    </tr>
</table>
</div>
