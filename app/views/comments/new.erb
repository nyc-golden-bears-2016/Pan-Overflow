<% if logged_in? %>

  <form class="comment_form" action="/comments" method="POST">
    <h4>Add your comment</h4>
    <input type="hidden" name="comment[commentable_id]" value="<%= model.id %>">
    <input type="hidden" name="comment[commentable_type]" value="<%= model.class %>">
    <input type="hidden" name="comment[question_id]" value="<%= question_id %>">
    <input type="hidden" name="comment[user_id]" value="<%= current_user.id %>">
    <textarea rows="4" cols="45" name="comment[body]" tabindex="1"></textarea>
    <br>
    <input type="submit" value="Submit new comment">
  </form>
<% end %>
